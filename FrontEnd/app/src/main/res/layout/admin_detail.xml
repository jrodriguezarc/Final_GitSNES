<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150px"
    >

    <TextView
        android:id="@+id/ad_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="#000000"
        android:text="asdasd"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="120dp"
        android:layout_alignParentTop="true" />




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/txt_idgame"
        android:layout_below="@+id/ad_name"
        android:layout_alignStart="@+id/ad_name"
        android:textColor="#ffe3e1e1"
        android:textSize="0dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: "
        android:id="@+id/textView"
        android:layout_above="@+id/txt_idgame"
        android:layout_marginLeft="10dp"
        android:layout_toStartOf="@+id/txt_idgame"
        android:textSize="30dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/admi"
        android:layout_margin="10dp"/>


</RelativeLayout>